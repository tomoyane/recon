{
  "manifest_version": 2,
  "name": "recon",
  "description": "Video recording tool",
  "version": "0.0.1",
  "icons": {
    "16": "extension/ic_logo.png",
    "48": "extension/ic_logo.png",
    "128": "extension/ic_logo.png"
  },
  "browser_action": {
    "default_popup": "extension/popup.html"
  },
  "background": {
    "scripts": [
      "extension/constant.min.js",
      "extension/environment.min.js",
      "extension/background.min.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "ui-frame/index.html",
    "ui-frame/index.html/*",
    "ui-frame/*.js",
    "ui-frame/assets/*",
    "ui-frame/*.css"
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "css": [
        "extension/style.css"
      ],
      "js": [
        "extension/content.min.js",
        "extension/constant.min.js",
        "extension/environment.min.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "unlimitedStorage",
    "tabs",
    "cookies",
    "desktopCapture",
    "https://app.uppy.jp/*",
    "https://app.uppy-jp/*",
    "https://dev-uppy.org/*"
  ]
}
