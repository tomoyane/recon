{
  "manifest_version": 3,
  "name": "RECON - Video recording tool",
  "description": "Screen Recorder & Screen Capture tool",
  "version": "1.0.0",
  "icons": {
    "16": "extension/ic_logo.png",
    "48": "extension/ic_logo.png",
    "128": "extension/ic_logo.png"
  },
  "action": {
    "default_popup": "extension/popup.html"
  },
  "background": {
    "service_worker": "extension/background.min.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["ui-frame/index.html"],
      "matches": ["https://*/*"]
    },
    {
      "resources": ["ui-frame/index.html/*"],
      "matches": ["https://*/*"]
    },
    {
      "resources": ["ui-frame/*.js"],
      "matches": ["https://*/*"]
    },
    {
      "resources": ["ui-frame/assets/*"],
      "matches": ["https://*/*"]
    },
    {
      "resources": ["ui-frame/*.css"],
      "matches": ["https://*/*"]
    },
    {
      "resources": ["extension/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "css": [
        "extension/style.css"
      ],
      "js": [
        "extension/content.min.js",
        "extension/constant.min.js",
        "extension/environment.min.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "unlimitedStorage",
    "tabs",
    "cookies",
    "desktopCapture",
    "scripting",
    "activeTab",
    "downloads",
    "tabCapture"
  ]
}
